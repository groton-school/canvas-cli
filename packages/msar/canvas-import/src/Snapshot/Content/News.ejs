<% if (content.Content.length > 0) { %>
<div>
    <h3>News</h3>
    <dl>
        <% content.Content.forEach(item => { %>
        <dt><%= item.Name %></dt>
        <dd><%= item.PublishDate %></dd>
            <!-- TODO link to news photo album -->
            <% if (item.PhotoList && item.PhotoList.length) { %>
                <%- include('Canvas/Image', {
                    image: item.PhotoList[0].LargeFilenameUrl.canvas,
                    course_id,
                    caption: item.PhotoList[0].Caption,
                    dimensions: item.PhotoList[0].LargeFilenameUrl.dimensions,
                    size: 300,
                    style: "border: none; padding: 0; float: left;"
                }) %>
            <% } %>
        <dd><%- item.BriefDescription %></dd>
        <dd><%- item.Description %></dd>
        <% }) %>
    </dl>
</div>
<% } %>
