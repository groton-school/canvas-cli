{
  "name": "@groton/canvas-api",
  "version": "0.3.4",
  "description": "Typed access to Canvas LMS API with embedded documentation",
  "homepage": "https://github.com/groton-school/canvas-cli/tree/main/packages/api/canvas-api#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/groton-school/canvas-cli.git",
    "directory": "packages/api/canvas-api"
  },
  "author": {
    "name": "Seth Battis",
    "email": "sbattis@groton.org"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "run-s clean:*",
    "clean:render": "del ./src/Endpoints ./src/Resources ./src/map.json ./var/render.log",
    "clean:compilation": "del ./dist",
    "spec": "run-s spec:*",
    "spec:clean": "del ./spec",
    "spec:download": "source .env; swagger-renderer download --instanceUrl \"$INSTANCE_URL\"",
    "build": "run-s build:*",
    "build:clean": "run-s clean",
    "build:render": "swagger-renderer render --overridePath ./overrides.json --modelDirName Resources --operationsDirName Endpoints --map --logFilePath ./var/render.log",
    "build:compile": "tsc",
    "release": "commit-and-tag-version"
  },
  "dependencies": {
    "@groton/canvas-api.client.base": "workspace:*",
    "@groton/canvas-api.utilities": "workspace:*",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@battis/descriptive-types": "^0.2.3",
    "@battis/typescript-tricks": "^0.7.4",
    "@groton/canvas-api.swagger-renderer": "workspace:*",
    "@tsconfig/node20": "^20.1.6",
    "commit-and-tag-version": "^12.6.0",
    "del-cli": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3"
  }
}
