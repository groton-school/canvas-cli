<% if (content.Content.length > 0 || (content.FilePath && content.FilePath.canvas)) { %>
<div>
    <% if (!content.FilePath || !content.FilePath.canvas) { %>
    <h3>Downloads</h3>
    <dl>
        <% for (const item of content.Content) { %>
            <dt><%- include('CanvasFileLink', {file: item.DownloadUrl.canvas, filename: item.Description}) %></dt>
            <dd><%- item.LongDescription %></dd>
        <% } %>
        </dl>
    <% } else { %>
    <dl>
            <dt><%- include('CanvasFileLink', {file: content.FilePath.canvas, filename: content.ShortDescription}) %></dt>
            <dd><%- content.LongDescription %></dd>
    </dl>
    <% } %>
</div>
<% } %>
