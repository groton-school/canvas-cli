<% if (content.Content.length > 0) { %>
<div>
    <h3>News</h3>
    <dl>
        <% content.Content.forEach(item => { %>
        <dt><%= item.Name %></dt>
        <dd><%= item.PublishDate %></dd>
        <% if (item.PhotoList && item.PhotoList.length) { %>
            <dd><%- include('Canvas/ImageGallery', {images: item.PhotoList.map(p => ({...p.LargeFilenameUrl.canvas, caption: p.Caption})), course_id, style: 'width: 100%'}) %></dd>
        <% } %>
        <dd><%- item.BriefDescription %></dd>
        <dd><%- item.Description %></dd>
        <% }) %>
    </dl>
</div>
<% } %>
