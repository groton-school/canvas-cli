<div>
    <% for (const album of content.AlbumContent || []) { %>
        <h4><%= content.Content.reduce((title, cover) => cover.AlbumId === album.AlbumId ? cover.AlbumName : title, content.CoverTitle ) %></h4>
        <a href="/courses/<%= course_id %>/pages/<%= album.canvas.url %>" style="display: block;">
            <%- include(
                    'Canvas/Image',
                    {
                        image: Array.isArray(content.Content) ? content.Content[0].FilenameUrl.canvas : content.FilePath.canvas,
                        course_id,
                        caption: content.CoverCaption,
                        dimensions: Array.isArray(content.Content) ? content.Content[0].FilenameUrl.dimensions : content.FilePath.dimensions,
                        size: 100
                    }
                )
            %>
        </a>
    <% } %>
</div>
